<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.SignUpActivity">

    <LinearLayout
        style="@style/Theme.AppCompat.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrincipal"
        android:fitsSystemWindows="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:contentDescription="@string/logo"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/proximanovaregular"
            android:gravity="center"
            android:text="@string/welcome"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />


        <com.google.android.material.textfield.TextInputLayout
            style="@style/LoginTextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/proximanovaregular"
            android:hint="@string/nombreYapellido"
            android:textColorHint="@color/colorAccent"
            app:counterEnabled="true"
            app:counterMaxLength="30"
            app:counterTextColor="@color/colorAccent"
            app:endIconMode="clear_text"
            app:errorEnabled="true"
            app:hintTextColor="@color/colorAccent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/proximanovaregular"
                android:inputType="textPersonName"
                android:textColor="#ffff" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            style="@style/LoginTextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/proximanovaregular"
            android:hint="@string/correo_electr_nico"
            android:textColorHint="@color/colorAccent"
            app:counterEnabled="true"
            app:counterMaxLength="30"
            app:counterTextColor="@color/colorAccent"
            app:endIconMode="clear_text"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtEmailRegistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/proximanovaregular"
                android:inputType="textEmailAddress"
                android:textColor="#ffff"
                app:endIconMode="clear_text"
                app:errorEnabled="true"
                app:hintTextColor="@color/colorAccent" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            style="@style/LoginTextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/proximanovaregular"
            android:hint="@string/password"
            android:textColorHint="@color/colorAccent"
            app:endIconMode="password_toggle"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtPasswordRegistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/proximanovaregular"
                android:inputType="textPassword"
                android:textColor="#ffff" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            style="@style/LoginTextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/proximanovaregular"
            android:hint="@string/confirmar_contrase_a"
            android:textColorHint="@color/colorAccent"
            app:endIconMode="password_toggle"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtRepetirContrasena"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/proximanovaregular"
                android:inputType="textPassword"
                android:textColor="#ffff" />
        </com.google.android.material.textfield.TextInputLayout>


        <!--

          <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
              android:id="@+id/btnFechaNacimiento"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_margin="16dp"
              android:background="@color/colorAccent"
              android:backgroundTint="@color/colorPrimaryDark"
              android:fontFamily="@font/proximanovaregular"
              android:padding="10dp"
              android:text="@string/fecha_de_nacimiento"
              android:textAlignment="center"
              android:textColor="@color/colorAccent"
              android:textStyle="bold"
              android:theme="@style/AppTheme" />

        -->


        <com.google.android.material.textfield.TextInputLayout
            style="@style/LoginTextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/proximanovaregular"
            android:hint="@string/c_digo_postal"
            android:textColorHint="@color/colorAccent"
            app:counterEnabled="true"
            app:counterMaxLength="5"
            app:counterTextColor="@color/colorAccent"
            app:endIconMode="clear_text"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtCpRegistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/proximanovaregular"
                android:inputType="number"
                android:textColor="#ffff" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            style="@style/LoginTextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/proximanovaregular"
            android:hint="@string/fecha_de_nacimiento"
            android:textColorHint="@color/colorAccent"
            app:endIconMode="custom"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtFechaNacimiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_date_range_black_24dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:fontFamily="@font/proximanovaregular"
                android:inputType="number"
                android:textColor="#ffff" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="16dp"
            android:background="@color/colorPrincipal"
            android:fontFamily="@font/proximanovaregular"
            android:text="@string/escoja_su_sexo"
            android:textColor="@color/colorAccent" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/fondo_card"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">


            <RadioButton
                android:id="@+id/rbHombre"
                style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/colorAccent"
                android:fontFamily="@font/proximanovaregular"
                android:padding="10dp"
                android:text="@string/hombre"
                android:textColor="#B0FFFFFF" />


            <RadioButton
                android:id="@+id/rbMujer"
                style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/colorAccent"
                android:fontFamily="@font/proximanovaregular"
                android:padding="10dp"
                android:text="@string/mujer"
                android:textColor="#B0FFFFFF" />

            <RadioButton
                android:id="@+id/rbOtro"
                style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/colorAccent"
                android:fontFamily="@font/proximanovaregular"
                android:padding="10dp"
                android:text="@string/otro"
                android:textColor="#B0FFFFFF" />

        </RadioGroup>


        <ProgressBar
            android:id="@+id/progressbarRegistro"
            style="?android:attr/absListViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#ffff"
            android:indeterminate="true"
            android:indeterminateTint="@color/colorPrimaryDark"
            android:max="200"
            android:visibility="gone" />

        <TextView
            android:id="@+id/cargandoRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/proximanovaregular"
            android:gravity="center"
            android:text="@string/loading"
            android:textColor="#ffff"
            android:textSize="12sp"
            android:visibility="gone" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRegistrarse"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/proximanovaregular"
            android:tag="custom_login_button"
            android:text="@string/registrarse"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:theme="@style/Theme.MaterialComponents"
            app:backgroundTint="@color/colorAccent"
            app:cornerRadius="20dp" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/proximanovaregular"
            android:tag="custom_login_button"
            android:text="@string/log_in"
            android:textColor="#ffff"
            android:theme="@style/Theme.MaterialComponents"
            app:backgroundTint="@color/colorPrimaryDark"
            app:cornerRadius="20dp" />


    </LinearLayout>
</ScrollView>