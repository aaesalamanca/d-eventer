<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrincipal"
    android:orientation="vertical"
    android:theme="@style/AppTheme">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_16"
        android:orientation="vertical"
        android:theme="@style/AppTheme">

        <TextView
            style="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_5"
            android:fontFamily="@font/mifuente"
            android:gravity="center"
            android:text="@string/event_presentation"
            android:textColor="@color/naranja" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civEvent"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="@dimen/size_150"
            android:layout_height="@dimen/size_150"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@mipmap/logo"
            app:civ_border_color="@color/colorAccent"
            app:civ_border_width="@dimen/size_2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_5"
            android:fontFamily="@font/proximanovaregular"
            android:gravity="center"
            android:text="@string/put_image_event"
            android:textColor="@color/colorAccent" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/AppTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_16"
            android:background="@color/colorAccent"
            android:hint="@string/name_event"
            android:textColorHint="@color/colorPrincipal"
            app:hintAnimationEnabled="true"
            app:startIconDrawable="@drawable/text_icon">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tietName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:fontFamily="@font/proximanovaregular"
                android:inputType="text"
                android:lines="1"
                app:cornerRadius="@dimen/radius_20" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/AppTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_16"
            android:background="@color/colorAccent"
            android:hint="@string/date"
            android:textColorHint="@color/colorPrincipal"
            app:hintAnimationEnabled="true"
            app:startIconDrawable="@drawable/date_icon">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tietDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:focusable="false"
                android:fontFamily="@font/proximanovaregular"
                android:lines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/AppTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_16"
            android:background="@color/colorAccent"
            android:hint="@string/time"
            android:textColorHint="@color/colorPrincipal"
            app:hintAnimationEnabled="true"
            app:startIconDrawable="@drawable/time_icon">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tietTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:focusable="false"
                android:fontFamily="@font/proximanovaregular"
                android:inputType="text"
                android:lines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/AppTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_16"
            android:background="@color/colorAccent"
            android:hint="@string/location"
            android:textColorHint="@color/colorPrincipal"
            app:hintAnimationEnabled="true"
            app:startIconDrawable="@drawable/location_icon">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tietLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:focusable="false"
                android:fontFamily="@font/proximanovaregular"
                android:inputType="text"
                android:lines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/AppTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_16"
            android:background="@color/colorAccent"
            android:hint="@string/price"
            android:textColorHint="@color/colorPrincipal"
            app:hintAnimationEnabled="true"
            app:startIconDrawable="@drawable/euro_icon">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tietPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:fontFamily="@font/proximanovaregular"
                android:inputType="numberDecimal" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/AppTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_16"
            android:background="@color/colorAccent"
            android:hint="@string/description"
            android:textColorHint="@color/colorPrincipal"
            app:hintAnimationEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tietDescription"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_200"
                android:background="@color/colorAccent"
                android:fontFamily="@font/proximanovaregular"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:lines="40"
                android:scrollbars="vertical" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_16"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/mbtnCreate"
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_marginEnd="@dimen/margin_16"
                android:layout_marginBottom="@dimen/margin_16"
                android:layout_weight="1"
                android:backgroundTint="@color/colorAccent"
                android:fontFamily="@font/proximanovaregular"
                android:padding="@dimen/padding_16"
                android:text="@string/create_event"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                app:cornerRadius="@dimen/radius_15" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/mbtnCancel"
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_marginEnd="@dimen/margin_16"
                android:layout_marginBottom="@dimen/margin_16"
                android:layout_weight="1"
                android:fontFamily="@font/proximanovaregular"
                android:padding="@dimen/padding_16"
                android:text="@string/cancel"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                app:backgroundTint="@color/colorPrincipal"
                app:cornerRadius="@dimen/radius_15" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>